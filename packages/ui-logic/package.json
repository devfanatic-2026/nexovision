{
    "name": "@maravilla/ui-logic",
    "version": "1.0.0",
    "description": "Maravilla Digital UI Logic - Business logic layer for widget data management and state",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "author": "Maravilla Digital Team",
    "homepage": "https://maravilla.digital",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts --clean --external react,react-native,@float.js/lite,@maravilla/ui-kit",
        "dev": "tsup src/index.ts --format esm --dts --watch --external react,react-native,@float.js/lite,@maravilla/ui-kit",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@float.js/lite": "workspace:*",
        "@maravilla/ui-kit": "workspace:*",
        "nativewind": "^4.2.1",
        "react-native": "0.81.5"
    },
    "peerDependencies": {
        "react": "^18.2.0 || ^19.0.0"
    },
    "devDependencies": {
        "@types/react": "^19.0.0",
        "tailwindcss": "^3.4.1",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "keywords": [
        "maravilla-digital",
        "business-logic",
        "state-management",
        "widgets"
    ]
}