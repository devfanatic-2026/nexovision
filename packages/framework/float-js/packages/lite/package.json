{
  "name": "@float.js/lite",
  "version": "1.0.0",
  "description": "Float.js Lite - Client-side framework for React Native and Web Components with state management and real-time capabilities",
  "type": "module",
  "author": "Alejandro Iglesias",
  "repository": {
    "type": "git",
    "url": "https://github.com/maravilla-digital/maravilla-cms.git",
    "directory": "packages/framework/float-js/packages/lite"
  },
  "homepage": "https://maravilla.digital",
  "bugs": {
    "url": "https://github.com/maravilla-digital/maravilla-cms/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "import": "./dist/router/index.js"
    },
    "./ai": {
      "types": "./dist/ai/index.d.ts",
      "import": "./dist/ai/index.js"
    },
    "./network": {
      "types": "./dist/network/index.d.ts",
      "import": "./dist/network/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "picocolors": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "react-native": "*",
    "react-native-web": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-native": "^0.70.0",
    "@types/react-native-web": "^0.19.2",
    "@types/ws": "^8.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.83.1",
    "react-native-web": "^0.19.13",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "float",
    "framework",
    "client",
    "react",
    "react-native",
    "lite"
  ],
  "license": "MIT"
}