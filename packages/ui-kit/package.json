{
    "name": "@maravilla/ui-kit",
    "version": "1.0.0",
    "description": "Maravilla Digital UI Kit - React Native component library for cross-platform widget rendering",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "author": "Maravilla Digital Team",
    "homepage": "https://maravilla.digital",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts --clean --external react,react-native",
        "dev": "tsup src/index.ts --format esm --dts --watch --external react,react-native",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-native": "^0.70.0",
        "tailwindcss": "^3.4.1",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@float.js/lite": "workspace:*",
        "nativewind": "^4.2.1",
        "react-native": "^0.83.1",
        "react-native-web": "^0.21.2"
    },
    "keywords": [
        "maravilla-digital",
        "ui-kit",
        "react-native",
        "components",
        "widgets"
    ]
}